class ProjectnewsController < ApplicationController
  # GET /projectnews
  # GET /projectnews.xml
  def index
    @projectnews = Projectnew.all

    respond_to do |format|
      format.html # index.html.erb
      format.xml  { render :xml => @projectnews }
    end
  end

  # GET /projectnews/1
  # GET /projectnews/1.xml
  def show
    @projectnews = Projectnew.find(params[:id])

    respond_to do |format|
      format.html # show.html.erb
      format.xml  { render :xml => @projectnews }
    end
  end

  # GET /projectnews/new
  # GET /projectnews/new.xml
  def new
    @projectnews = Projectnew.new

    respond_to do |format|
      format.html # new.html.erb
      format.xml  { render :xml => @projectnews }
    end
  end

  # GET /projectnews/1/edit
  def edit
    @projectnews = Projectnew.find(params[:id])
  end

  # POST /projectnews
  # POST /projectnews.xml
  def create
    @projectnews = Projectnew.new(params[:projectnews])

    respond_to do |format|
      if @projectnews.save
        format.html { redirect_to(@projectnews, :notice => 'Projectnew was successfully created.') }
        format.xml  { render :xml => @projectnews, :status => :created, :location => @projectnews }
      else
        format.html { render :action => "new" }
        format.xml  { render :xml => @projectnews.errors, :status => :unprocessable_entity }
      end
    end
  end

  # PUT /projectnews/1
  # PUT /projectnews/1.xml
  def update
    @projectnews = Projectnew.find(params[:id])

    respond_to do |format|
      if @projectnews.update_attributes(params[:projectnews])
        format.html { redirect_to(@projectnews, :notice => 'Projectnew was successfully updated.') }
        format.xml  { head :ok }
      else
        format.html { render :action => "edit" }
        format.xml  { render :xml => @projectnews.errors, :status => :unprocessable_entity }
      end
    end
  end

  # DELETE /projectnews/1
  # DELETE /projectnews/1.xml
  def destroy
    @projectnews = Projectnew.find(params[:id])
    @projectnews.destroy

    respond_to do |format|
      format.html { redirect_to(projectnews_url) }
      format.xml  { head :ok }
    end
  end
end

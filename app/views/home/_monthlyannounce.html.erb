<ul>
    	<%if session[:lang]=="en" %>
     	 <h2>Monthly Annoucement</h2>
      <%end%>
      <%if session[:lang]=="th" %>
     	 <h2>ประกาศประจำเดือน</h2>
      <%end%> 
		<%@allannounces_month.sort.each do |month, announces| %>
		   <h3 style="margin-top:10px;background:#9BCAE8;"><%= convertmonth(month.strftime('%B')) %></h3>
			<% for announce in announces %>
			<li class=<%=cycle('even', 'odd')%>
				<p>
				 <a href="/announce/<%=announce.id%>"><%= announce.title %> </a><br/>
				<i style="float:right;">  <%= announce.start_on.to_date.to_s(:long) %></i>
				</p>
			</li>
	 <% end %>
	<% end %>

</ul>

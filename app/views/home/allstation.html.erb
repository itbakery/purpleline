<h1>Stations</h1>
<table>
<% @stations.each do |s| %>
  <tr>
   <td style="vertical-align:top;">
   <h3 class="station"><%=s.title%></h3><br/>

   <%=s.content.html_safe.gsub(/<img/,"<img width='150' style='float:left;margin:7px;vertical-align:top;'")%>
   </td>
  </tr>
  <tr>
    <td><a href="/station/<%=s.id%>">More Detail</a></td>
  </tr>
<%end%>
</table>


<ul>
    	<%if session[:lang]=="en" %>
     	 <h2 style="margin-top:15px;">Monthly Newsletters</h2>
      <%end%>
      <%if session[:lang]=="th" %>
     	 <h2 style="margin-top:15px;">ข่าวสารประจำเดือน</h2>
      <%end%> 
							<%@allnewletters_month.each do |month,newletters| %>
									<h3 style="margin-top:10px;background:#9BCAE8;">
							     <%if session[:lang]=="en" %>
     	                 <h3><%= month.strftime('%B') %></h3>
                   <%end%>
                   <%if session[:lang]=="th" %>
     	                 <h3><%= convertmonth(month.strftime('%B')) %></h3>
                   <%end%>
									
									</h3>
									<% for newletter in newletters %>
										<li class=<%=cycle('even', 'odd')%>
										
											 <span style="font-size:14px;">
											 <a href="/shownews/<%=newletter.id%>"><%= newletter.title %> </a>
											 </span>
											<i style="float:right;">  <%= newletter.start_on.to_date.to_s(:long) %></i>
	
										</li>
									<% end %>
							<% end %>

</ul>

<ul>
    	<%if session[:lang]=="en" %>
     	 <h2>Monthly Annoucement</h2>
      <%end%>
      <%if session[:lang]=="th" %>
     	 <h2>ประกาศประจำเดือน/h2>
      <%end%> 
		<%@allannounces_month.order("start_on desc").each do |month, announces| %>
		   <h3>
	     <%if session[:lang]=="th" %>
     	    <h3><%= month.strftime('%B') %></h3>
       <%end%>
       <%if session[:lang]=="en" %>
     	    <h3><%= convertmonth(month.strftime('%B')) %></h3>
       <%end%>
		   </h3>
			<% for announce in announces %>
			<li class=<%=cycle('even', 'odd')%>
				<p>
				 <a href="/announce/<%=announce.id%>"><%= announce.title %> </a><br/>
				<i style="float:right;"> start on <%= announce.start_on.to_date.to_s(:long) %></i>
				</p>
			</li>
	 <% end %>
	<% end %>

</ul>

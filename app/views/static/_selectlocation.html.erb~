	function mapobject(){
			  var map = new GMap2(document.getElementById("map_div"));
        map.setCenter(new GLatLng(13.83333,100.522413), 13);
        map.setUIToDefault();
	}
	function animate(){
		 map.panTo(new GLatLng(37.4569, -122.1569));

	}
	function onSelectChange(){

<% @imageshash.each_with_index  do |images,index| %>
	<div class="thumb">
	    <% captionthai = images.caption_en rescue nil  %>
	    <% captionen  = images.caption rescue nil %>
      <% showtext = "[th>]#{captionthai}---</br>[en>]#{captionen}---" %>
		<%if images.assetable_type == "ReportsTranslation" %>
		   <%= link_to(image_tag(images.url(:thumb)), images.url(:large), :class => "lightbox", :title=> "#{showtext}"  ) unless images.nil? %>
		<div class="phototitle">
		<a href="/showreport/<%=images.assetable_id%>"><%=truncate(images.caption,:length=>12,:omission=>"...")%></a>
	  </div>
	</div>  
	<%end%> 
<%end%>
<div style="clear: both;"></div>


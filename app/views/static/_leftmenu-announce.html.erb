<div id="containerribbon"> <!-- Main Container -->    

  <div class="bubble"> <!-- Bubble -->
    <div class="rectangle"><h2 style="hight:29px;"><%= image_tag("mrtaboy.png") %>&nbsp;&nbsp;News&Event</h2></div> <!-- Rectangle with a title -->
    <div class="triangle-l"></div> 
    <div class="triangle-r"></div> 

    <div class="info">
      <div id="">
          <h3><a href="">All Announcement</a></h3>
            <div>
            <ul>
            	<% @allannounces.each do |announce|%>
            		<li>
                  <a href="/announce/<%=announce.id%>"><%=truncate(announce.title,:length=>29)%>
            		</li> 
             <%end%>
           </ui>
            </div>
          <h3><a href="">Lastest Announcement</a></h3>
            <div>
            <ul>
            	<%@lasttenannounces.each do |announce|%>
            		<li>
                   <a href="/announce/<%=announce.id%>"><%=truncate(announce.title,:length=>29)%>
            		</li> 
             <%end%>
            
          </ui>
            </div>
          <h3><a href="">Monthly Announce</a></h3>
            <div>
							<%@allannounces_month.sort.each do |month, announces| %>
									<h2><%= month.strftime('%B') %></h2>
									<% for announce in announces %>
										<div class="task">
											<strong><%= announce.title %></strong>
											create on <%= announce.start_on.to_date.to_s(:long) %>
										</div>
									<% end %>
							<% end %>
            </div>
     </div>
    </div>
  </div>

</div>


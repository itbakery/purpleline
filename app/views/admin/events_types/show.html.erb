<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_events_types_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_events_type_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_events_type_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.admin_events_type.name_th", :default => t("activerecord.labels.name_th", :default => "Name_TH")) %>:</b>
          <%= @events_type.name_th %>
        </p>
        <p>
          <b><%= t("activerecord.attributes.admin_events_type.name_en", :default => t("activerecord.labels.name_en", :default => "Name_EN")) %>:</b>
          <%= @events_type.name_en %>
        </p>
           <p>icon:
           <%if  @events_type.icon.exists? then %>
                 <%= image_tag @events_type.icon.url(:iconsmall) %>
           <%end%>
           </p>       
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_events_type_path(@events_type), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_events_type_path(@events_type), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>

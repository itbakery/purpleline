<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_pages_translations_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_pages_translation_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_pages_translation_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.admin_pages_translation.page_id", :default => t("activerecord.labels.page_id", :default => "Page")) %>:</b>
          <%= @pages_translation.page_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_pages_translation.language_id", :default => t("activerecord.labels.language_id", :default => "Language")) %>:</b>
          <%= @pages_translation.language_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_pages_translation.title", :default => t("activerecord.labels.title", :default => "Title")) %>:</b>
          <%= @pages_translation.title %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_pages_translation.content", :default => t("activerecord.labels.content", :default => "Content")) %>:</b>
          <%= @pages_translation.content.html_safe %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_pages_translation.publish", :default => t("activerecord.labels.publish", :default => "Publish")) %>:</b>
          <%= @pages_translation.publish %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_pages_translation.start_on", :default => t("activerecord.labels.start_on", :default => "Start on")) %>:</b>
          <%= @pages_translation.start_on %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_pages_translation.stop_on", :default => t("activerecord.labels.stop_on", :default => "Stop on")) %>:</b>
          <%= @pages_translation.stop_on %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_pages_translation.user_id", :default => t("activerecord.labels.user_id", :default => "User")) %>:</b>
          <%= @pages_translation.user_id %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_pages_translation_path(@pages_translation), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_pages_translation_path(@pages_translation), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
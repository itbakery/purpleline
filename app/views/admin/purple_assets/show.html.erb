<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_purple_assets_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_purple_asset_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_purple_asset_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.admin_purple_asset.title", :default => t("activerecord.labels.title", :default => "Title")) %>:</b>
          <%= @purple_asset.title %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_purple_asset.type", :default => t("activerecord.labels.type", :default => "Type")) %>:</b>
          <%= @purple_asset.type %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_purple_asset.attachable_id", :default => t("activerecord.labels.attachable_id", :default => "Attachable")) %>:</b>
          <%= @purple_asset.attachable_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_purple_asset.attachable_type", :default => t("activerecord.labels.attachable_type", :default => "Attachable type")) %>:</b>
          <%= @purple_asset.attachable_type %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_purple_asset.publish", :default => t("activerecord.labels.publish", :default => "Publish")) %>:</b>
          <%= @purple_asset.publish %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_purple_asset.latitude", :default => t("activerecord.labels.latitude", :default => "Latitude")) %>:</b>
          <%= @purple_asset.latitude %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_purple_asset.longtitude", :default => t("activerecord.labels.longtitude", :default => "Longtitude")) %>:</b>
          <%= @purple_asset.longtitude %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_purple_asset_path(@purple_asset), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_purple_asset_path(@purple_asset), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
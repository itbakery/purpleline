<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_progresses_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_progress_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_progress_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.admin_progress.month", :default => t("activerecord.labels.month", :default => "Month")) %>:</b>
          <%= @progress.month %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_progress.schedule", :default => t("activerecord.labels.schedule", :default => "Schedule")) %>:</b>
          <%= @progress.schedule %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_progress.actual", :default => t("activerecord.labels.actual", :default => "Actual")) %>:</b>
          <%= @progress.actual %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_progress.note", :default => t("activerecord.labels.note", :default => "Note")) %>:</b>
          <%= @progress.note %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_progress_path(@progress), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_progress_path(@progress), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
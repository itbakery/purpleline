<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_reports_translations_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_reports_translation_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_reports_translation_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.admin_reports_translation.report_id", :default => t("activerecord.labels.report_id", :default => "Report")) %>:</b>
          <%= Report.find(@reports_translation.report_id).name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_reports_translation.reports_type_id", :default => t("activerecord.labels.reports_type_id", :default => "Reports type")) %>:</b>
           <%= ReportsType.find(@reports_translation.reports_type_id).name_th %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_reports_translation.language_id", :default => t("activerecord.labels.language_id", :default => "Language")) %>:</b>
          <%= Language.find(@reports_translation.language_id).name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_reports_translation.title", :default => t("activerecord.labels.title", :default => "Title")) %>:</b>
          <%= @reports_translation.title %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_reports_translation.content", :default => t("activerecord.labels.content", :default => "Content")) %>:</b>
          <%= @reports_translation.content %>
        </p>


        <p>
          <b><%= t("activerecord.attributes.admin_reports_translation.start_on", :default => t("activerecord.labels.start_on", :default => "Start on")) %>:</b>
          <%= @reports_translation.start_on %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_reports_translation.stop_on", :default => t("activerecord.labels.stop_on", :default => "Stop on")) %>:</b>
          <%= @reports_translation.stop_on %>
        </p>
        <p>
        <%if !@reports_translation.images.nil?%>
            <%@reports_translation.images.each do |image|%>
            <p><%= image_tag   image.url(:middle)%></p>
            <%end%>
        <%else%>
            <p>sorry there is no images </p>
        <%end%>
        </p>
        <p>
          <b><%= t("activerecord.attributes.admin_reports_translation.user_id", :default => t("activerecord.labels.user_id", :default => "User")) %>:</b>
          <%= @reports_translation.user_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_reports_translation.task_id", :default => t("activerecord.labels.task_id", :default => "Task")) %>:</b>
          <%= @reports_translation.task_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_reports_translation.publish", :default => t("activerecord.labels.publish", :default => "Publish")) %>:</b>
          <%= @reports_translation.publish %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_reports_translation.polypoint", :default => t("activerecord.labels.polypoint", :default => "Polypoint")) %>:</b>
          <%= @reports_translation.polypoint %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_reports_translation_path(@reports_translation), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_reports_translation_path(@reports_translation), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>

<ol class="formatcol-four">
  <li>
  <div class="group">
    <%= f.label :language_id, t("activerecord.attributes.stations_translation.language_id", :default => "Language"), :class => :label %>
    <%= f.collection_select :language_id,Language.all,:id,:name,{:prompt=>"Select Language"}, {:class => 'text_field',:style=>"width:150px"} %>
  </div>
  </li>
  <li>
  <div class="group">
    <%= f.label :station_id, t("activerecord.attributes.stations_translation.station_id", :default => "Station"), :class => :label %>
    <%= f.collection_select :station_id,Station.all,:id,:name,{:prompt=>"Select Station"}, {:class => 'text_field',:style=>"width:150px"} %>
  </li>
</ol>


  <div class="group">
    <%= f.label :code, t("activerecord.attributes.stations_translation.code", :default => "Code"), :class => :label %>
    <%= f.text_field :code, {:class => 'text_field',:style=>"width:150px"} %>
  </div>
  </li>
  <li>
  <div class="group">
    <%= f.label :title, t("activerecord.attributes.stations_translation.title", :default => "Title"), :class => :label %>
    <%= f.text_field :title, :class => 'text_field' %>
  </div>

  <div class="group">
    <%= f.label :content, t("activerecord.attributes.stations_translation.content", :default => "Content"), :class => :label %>
    <%= f.cktext_area :content, :class => 'text_area' %>
  </div>

<ol class="formatcol-four">
  <li>
  <div class="group">
    <%= f.label :latitude, t("activerecord.attributes.stations_translation.latitude", :default => "Latitude"), :class => :label %>
    <%= f.text_field :latitude, :class => 'text_field' %>
  </div>
  </li>
  <li>
  <div class="group">
    <%= f.label :longtitude, t("activerecord.attributes.stations_translation.longtitude", :default => "Longtitude"), :class => :label %>
    <%= f.text_field :longtitude, :class => 'text_field' %>
  </div>
  </li>

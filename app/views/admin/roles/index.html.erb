<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_roles_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_role_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Roles</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>
            <%= t("activerecord.attributes.admin_role.name_th", :default => t("activerecord.labels.name_th", :default => "Name_th")) %>
          </th>
          <th>
            <%= t("activerecord.attributes.admin_role.name_en", :default => t("activerecord.labels.name_th", :default => "Name_en")) %>
          </th>          
       <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @roles.each do |role| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= role.id %>
          </td>
          <td>
            <%= link_to role.name_th, admin_role_path(role) %>
          </td>
          <td>
            <%= link_to role.name_en, admin_role_path(role) %>
          </td>          
                    <td>
            <%= role.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_role_path(role) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_role_path(role) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_role_path(role), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>

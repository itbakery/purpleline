<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admin_newsletters_translations_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_newsletters_translation_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_newsletters_translation_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.admin_newsletters_translation.newsletter_id", :default => t("activerecord.labels.newsletter_id", :default => "Newsletter")) %>:</b>
          <%= @newsletters_translation.newsletter_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_newsletters_translation.newsletters_type_id", :default => t("activerecord.labels.newsletters_type_id", :default => "Newsletters type")) %>:</b>
          <%= @newsletters_translation.newsletters_type_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_newsletters_translation.language_id", :default => t("activerecord.labels.language_id", :default => "Language")) %>:</b>
          <%= @newsletters_translation.language_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_newsletters_translation.title", :default => t("activerecord.labels.title", :default => "Title")) %>:</b>
          <%= @newsletters_translation.title %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_newsletters_translation.content", :default => t("activerecord.labels.content", :default => "Content")) %>:</b>
          <%= @newsletters_translation.content %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_newsletters_translation.latitude", :default => t("activerecord.labels.latitude", :default => "Latitude")) %>:</b>
          <%= @newsletters_translation.latitude %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.admin_newsletters_translation.longtitude", :default => t("activerecord.labels.longtitude", :default => "Longtitude")) %>:</b>
